{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "sourceRoot": "./",
    "outDir": "./bin",
    "declaration": true,
    "skipLibCheck": true,
    "removeComments": true,
    "checkJs": false,
    "resolveJsonModule": true
  },
  "exclude": ["__tests__/*", "*.sqlite3", "bin/", "node_modules/**"]
}
